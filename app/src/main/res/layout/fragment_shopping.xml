<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.ys.pa200.weight.HeadColumnView
        android:id="@+id/home_headColumnView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:is_show_left_btn="false"
        app:is_show_right_text="false"
        app:title_context="商城" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/notdata_de"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没开放哦,敬请期待吧......"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/my_0888cf"/>
    </LinearLayout>

</LinearLayout>